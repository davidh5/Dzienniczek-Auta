<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/markaEdit"
        android:hint="Wprowadź markę auta"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/modelEdit"
        android:hint="Wprowadź model auta"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/nrRejestracyjnyEdit"
        android:hint="Wpowadź numer rejestracyjny"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapCharacters|textVisiblePassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj"
        android:id="@+id/dialogDodajAutoDodaj"
        android:singleLine="true"
        android:layout_gravity="center_horizontal" />
</LinearLayout>