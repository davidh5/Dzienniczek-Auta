<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_horizontal">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextOpisNaprawy"
        android:hint="Wprowadź opis"
        android:layout_gravity="center_horizontal"
        android:inputType="number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editTextPrzebiegNaprawy"
        android:hint="Wprowadź przebieg"
        android:layout_gravity="center_horizontal"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_choose_date"
        android:id="@+id/textView9" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pickerRepairEditDate"
        android:datePickerMode="spinner"
        android:spinnersShown="true"
        android:calendarViewShown="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aktualizuj"
            android:id="@+id/button"
            android:singleLine="true"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuń wpis"
            android:id="@+id/button2"
            android:singleLine="true"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>